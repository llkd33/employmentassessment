# 환경 설정
NODE_ENV=development
PORT=3000

# 데이터베이스 설정
DATABASE_URL=postgresql://username:password@localhost:5432/employee_assessment
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=employee_assessment

# JWT 설정
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h

# 카카오 OAuth
KAKAO_JAVASCRIPT_KEY=your_kakao_javascript_key

# 관리자 설정
SUPER_ADMIN_SECRET=your_super_admin_secret

# 이메일 설정 (옵션)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@employee-assessment.com

# 프론트엔드 URL
FRONTEND_URL=http://localhost:3000

# 보안 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
SESSION_SECRET=your-session-secret-change-this
ADMIN_ALLOWED_IPS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 파일 업로드
MAX_FILE_SIZE=5242880

# 캐싱
CACHE_TTL=3600

# 로깅
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log